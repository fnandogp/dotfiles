##
## Aliases
##

# Config file
alias cfg_zsh="nvim $HOME/dotfiles/.zshrc"
alias cfg_i3="nvim $HOME/dotfiles/.i3/config"
alias cfg_vim="nvim $HOME/dotfiles/"

# Common
alias s="sudo"
alias p="pacman"
alias vim="vim -u DEFAULTS"
alias v="nvim"

alias ws="cd $HOME/workspace"
alias dotfiles="cd $HOME/dotfiles"

alias gcz="git cz"
alias cz="git cz"

# Laravel
alias art="php artisan"
alias migrate="php artisan migrate"

# Laradock
alias dc="docker-compose"
alias dcup="docker-compose up -d"
alias dcexec="docker-compose exec --user=laradock workspace bash"
alias dcstop="docker-compose stop"
